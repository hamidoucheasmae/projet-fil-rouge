<script type="text/javascript">
  var cost = 0;
  var room = <%= list[0].room %>;
  var y1 = <%= list[0].doa.getFullYear() %>;
  var m1 = <%= list[0].doa.getMonth() %> + 1;
  var d1 = <%= list[0].doa.getDate() %>;
  var d = new Date();
  var y2 = d.getFullYear();
  var m2 = d.getMonth() + 1;
  var d2 = d.getDate();
  console.log(room);
  if(room > 100 && room <= 200){
    cost += (y2 - y1) * (50000);
    cost += (m2 - m1) * (5000);
    cost += (d2 - d1) * (200);
  }
  else if(room > 200 && room <= 300){
    cost += (y2 - y1) * (100000);
    cost += (m2 - m1) * (10000);
    cost += (d2 - d1) * (500);
  }
  console.log(cost);
  document.getElementById("m_fee").value = cost;
</script>

<script type="text/javascript">
    var dfee = <%= list[0].d_fee; %>;
    var mfee = <%= list[0].m_fee; %>;
    var cfee = <%= list[0].c_fee; %>;
    var tot = cfee + dfee + mfee;
    document.getElementById("t_fee").value = tot;
    var tax = (18 / 100) * tot;
    document.getElementById("tax").value = tax;
    document.getElementById("ffee").value = tax + tot;
  </script>

